{
  "name": "@byloth/html-element-style",
  "version": "2.0.0",
  "description": "A library to easily manage HTMLElement style properties, just like normal properties; no more strings to parse or replace!",
  "keywords": [
    "HTMLElement",
    "DOM",
    "Style",
    "Library",
    "Parser",
    "Replacer"
  ],
  "homepage": "https://github.com/Byloth/html-element-style#readme",
  "bugs": {
    "url": "https://github.com/Byloth/html-element-style/issues"
  },
  "license": "GPL-3.0-or-later",
  "author": {
    "name": "Matteo Bilotta",
    "email": "me@byloth.net",
    "url": "https://www.byloth.net/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Byloth/html-element-style.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/html-element-style.umd.js",
  "module": "./dist/html-element-style.es.js",
  "exports": {
    ".": {
      "import": "./dist/html-element-style.es.js",
      "require": "./dist/html-element-style.umd.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "ci": "yarn install --frozen-lockfile",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:prod": "export NODE_ENV='production' && yarn lint",
    "test": "jest --env=jsdom"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@byloth/eslint-config": "^1.1.0",
    "eslint": "^7.29.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.0.4",
    "vite": "^2.3.8"
  }
}
